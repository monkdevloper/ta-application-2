<%- include('layout', { body: '' }) %>
<h1>Dashboard</h1>

<!-- Student Dashboard -->
<% if (role === 'student') { %>
<h2>Available Courses</h2>
<div class="course-grid">
  <% courses.forEach(course => { %>
  <div class="course-card">
    <p><strong>Course Name:</strong> <%= course.name %></p>
    <% // Check if the student has already applied for this course const
    application = applications.find(app => app.course._id.toString() ===
    course._id.toString()); if (application) { %>
    <p><strong>Status:</strong> <%= application.status %></p>
    <% } else { %>
    <!-- Form to Apply for a Course -->
    <form action="/student/apply" method="POST">
      <input type="hidden" name="courseId" value="<%= course._id %>" />
      <label for="skills-<%= course._id %>">Skills:</label>
      <input
        type="text"
        id="skills-<%= course._id %>"
        name="skills"
        placeholder="Enter your skills"
        required
      />

      <label for="resumeLink-<%= course._id %>">Resume Link:</label>
      <input
        type="url"
        id="resumeLink-<%= course._id %>"
        name="resumeLink"
        placeholder="Enter your resume link"
        required
      />

      <label for="phoneNumber-<%= course._id %>">Phone Number:</label>
      <input
        type="tel"
        id="phoneNumber-<%= course._id %>"
        name="phoneNumber"
        placeholder="Enter your phone number"
        required
      />

      <button type="submit">Apply</button>
    </form>
    <% } %>
  </div>
  <% }) %>
</div>

<h2>Your Applications</h2>
<% if (applications.length > 0) { %>
<ul>
  <% applications.forEach(app => { %>
  <li>
    <strong>Course:</strong> <%= app.course.name %> |
    <strong>Status:</strong> <%= app.status %>
  </li>
  <% }) %>
</ul>
<% } else { %>
<p>You haven't applied for any courses yet.</p>
<% } %>

<!-- Staff Dashboard -->
<% } else if (role === 'staff') { %>
<h2>Add a New Course</h2>
<form action="/staff/add-course" method="POST" style="margin-bottom: 2rem">
  <input
    type="text"
    name="name"
    placeholder="Course Name"
    required
    style="padding: 0.5rem; width: 70%; margin-right: 1rem"
  />
  <button type="submit">Add Course</button>
</form>

<h2>Your Courses</h2>
<% if (courses.length > 0) { %> <% courses.forEach(course => { %>
<div class="course-card">
  <p><strong>Course Name:</strong> <%= course.name %></p>
  <form action="/staff/delete-course" method="POST" style="display: inline">
    <button type="submit" name="courseId" value="<%= course._id %>">
      Delete
    </button>
  </form>
</div>
<% }) %> <% } else { %>
<p>No courses created yet.</p>
<% } %> <% } %> <%- include('footer') %>
